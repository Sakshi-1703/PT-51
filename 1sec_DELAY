ORG 00H
LJMP MAIN
ORG 100H
MAIN:
	SETB P1.7
	SETB P1.6
	SETB P1.5
	SETB P1.4
	CALL DELAY1000MS
	CPL P1.7
	CPL P1.6
	CPL P1.5
	CPL P1.4
	CALL DELAY1000MS
	HERE:SJMP HERE
	ORG 130H
	
	DELAY1000MS:
		MOV R4,#10
		UP3:CALL DELAY100MS
		DJNZ R4,UP3	
		RET
	
	DELAY100MS:
		MOV R3,#10
		UP2:CALL DELAY10MS
		DJNZ R3,UP2	
		RET
	
	DELAY10MS:
		MOV R2,#10
		UP1:CALL DELAY1MS
 		DJNZ R2,UP1
		RET
		
	DELAY1MS:
		MOV R1,#04
		UP:MOV R0,#250
		HERE1: DJNZ R0, HERE1
		DJNZ R1, UP
RET
END

